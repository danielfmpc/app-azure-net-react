{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "TenantId", // ID do diretório (locatário)
    "ClientId": "ClientId", // ID do aplicativo (cliente)
    "Audience": "api://Audience/access_as_user", // URI da ID do aplicativo
    "ClientSecret": "ClientSecret",
    "CallbackPath": "/signin-oidc"
  }
}